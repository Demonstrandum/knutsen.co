(style
  (header
    :position fixed
    :top 0
    :left 0)
  (header .logo
    :opacity 0.2
    :text-decoration none
    :display block
    :margin 0
    :padding (0.75em 1em))
  (header .logo:hover
    :opacity 1.0
    :cursor pointer)
  (header .logo img
    :width 4rem))

(header
  (a :class logo :href "/"
    (img :src "/media/k-black.svg" :alt "logo" :width 48)))
